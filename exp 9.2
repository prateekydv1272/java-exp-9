// Demonstration of Hibernate ORM Core Concepts: Entity Mapping, SessionFactory, and CRUD operations.

import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.Transaction;
import org.hibernate.cfg.Configuration;
import jakarta.persistence.*;

@Entity
@Table(name = "student")
class Student {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private int id;

    @Column(name = "name")
    private String name;

    public Student() {}
    public Student(String name) {
        this.name = name;
    }

    // Getters & Setters
    public int getId() { return id; }
    public void setId(int id) { this.id = id; }

    public String getName() { return name; }
    public void setName(String name) { this.name = name; }

    @Override
    public String toString() {
        return "Student{id=" + id + ", name='" + name + "'}";
    }
}

public class HibernateCoreDemo {
    public static void main(String[] args) {

        // 1Ô∏è‚É£ Configure Hibernate and Build SessionFactory
        Configuration cfg = new Configuration();
        cfg.configure("hibernate.cfg.xml"); // Reads DB settings & mappings
        cfg.addAnnotatedClass(Student.class);

        SessionFactory factory = cfg.buildSessionFactory();

        // 2Ô∏è‚É£ Create (Insert)
        Session session = factory.openSession();
        Transaction tx = session.beginTransaction();

        Student s1 = new Student("Meghana");
        session.save(s1); // Save student to DB
        tx.commit();
        session.close();
        System.out.println("‚úÖ Record Inserted: " + s1);

        // 3Ô∏è‚É£ Read (Retrieve)
        session = factory.openSession();
        Student s2 = session.get(Student.class, s1.getId());
        System.out.println("üìñ Retrieved: " + s2);
        session.close();

        // 4Ô∏è‚É£ Update
        session = factory.openSession();
        tx = session.beginTransaction();

        Student s3 = session.get(Student.class, s1.getId());
        s3.setName("Manasa");
        session.update(s3);

        tx.commit();
        session.close();
        System.out.println("‚úèÔ∏è Updated Record: " + s3);

        // 5Ô∏è‚É£ Delete
        session = factory.openSession();
        tx = session.beginTransaction();

        Student s4 = session.get(Student.class, s1.getId());
        if (s4 != null) {
            session.delete(s4);
            System.out.println("‚ùå Deleted Record: " + s4);
        }

        tx.commit();
        session.close();

        // 6Ô∏è‚É£ Close the SessionFactory
        factory.close();
        System.out.println("\nüèÅ Hibernate session closed successfully.");
    }
}
